<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36e5ff"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:text="高级工具" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/guishudi"
            android:paddingLeft="16dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />
        <TextView
            android:drawableRight="@drawable/right"
            android:id="@+id/numberbelong"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="号码归属地查询"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_marginLeft="60dp"
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/backup"
            android:paddingLeft="16dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />
        <TextView
            android:drawableRight="@drawable/right"
            android:id="@+id/smsbackup"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="短信备份"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_marginLeft="60dp"
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/rescovery"
            android:paddingLeft="16dp"
            android:layout_width="55dp"
            android:layout_height="55dp" />
        <TextView
            android:drawableRight="@drawable/right"
            android:id="@+id/smsrecovery"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:text="短信恢复"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_marginLeft="60dp"
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>






</LinearLayout>
