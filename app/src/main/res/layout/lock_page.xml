<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36e5ff"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:text="手机防盗" />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="20sp"
            android:text="安全号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="right"
            android:textSize="20sp"
            android:layout_weight="1"
            android:padding="15dp"
            android:id="@+id/tv_savenum"
            android:text="1234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <com.study.hang.com.study.hang.ui.SettingItem
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_lock"
        />
    <View
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_enterGuide"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:text="重新进入设置向导"
        android:background="@drawable/tv_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="1dp"/>
    <TextView
        android:gravity="center"
        android:padding="15dp"
        android:textSize="20sp"
        android:text="功能简介"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=" GPS追踪 >_ location"
        android:drawableLeft="@drawable/tag"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text=" 播放报警音乐 >_ alarm"
        android:drawableLeft="@drawable/tag"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text=" 远程删除数据 >_ wipedata"
        android:drawableLeft="@drawable/tag"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text=" 远程锁屏 >_ lockscreen"
        android:drawableLeft="@drawable/tag"
        android:textSize="18sp"
        android:paddingTop="15dp"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
